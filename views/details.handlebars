{{#if club}}
  <div class="card">
    <div class="wrapper" style="background-image: url('{{image}}');">
      <div class="data">
        <div class="content">
          <span class="author">SEATTLE</span>
          <h1 class="title">The Seattle {{club}}</h1>
          <p class="text">Sport: {{sport}} <br/> Founded: {{founded}}</p>
        </div>
      </div>
    </div>
  </div>
  {{else}}
    {{club}} not found
{{/if}}

{{#if add}}
  Your Team Has Been Added! Thank you!
    {{else}}
    No Team Has Been Added. Please Try Again.
{{/if}}
{{!-- when clicked takes you back to home/search bar --}}
<form action="/" method="post">
        <br/>
        <input type="button" value="Search Again" onclick="window.location = '/';" id="btn">
        <br/>
</form>

{{!-- when clicked deletes current team and directs you to 'delete' page --}}
<form action="/delete" method="post">
        <input type="submit" value="Delete" id="btn">
        
</form>